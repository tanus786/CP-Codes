#include<iostream>
using namespace std;

void Spiral_print(int arr[][4], int row, int col)
{
    int count = 0, total = row*col;
    //Index ---->
    int start_row = 0;
    int start_col = 0;
    int end_row = row - 1;
    int end_col = col - 1;

    while (count < total)
    {
        //Print starting row elements:-----
       for (int index = start_col; index <= end_col && count<total; index++)
       {
            cout<<arr[start_row][index]<<" ";
            count++;
       }
       start_row++;

        //Printing Ending col:--
        for (int index = start_row; index <= end_row && count<total; index++)
        {
            cout<<arr[index][end_col]<<" ";
            count++;
        }
        end_col--;

        //Printing End Row :----
        for (int index = end_col; index >= start_col && count<total; index--)
        {
            cout<<arr[end_row][index]<<" ";
            count++;
        }
        end_row--;

        //Printing Starting column:---
        for (int index = end_row; index >= start_row && count<total; index--)
        {
            cout<<arr[index][start_col]<<" ";
            count++;
        }
        start_col++;
        
    }
    //    4 5 8 9 2 3 1 0 13 19 21 17
}

int main()
{
    int arr[3][4];
    cout<<"Enter Array Elements "<<endl;
    for (int i = 0; i < 3; i++)
    {
        for (int j = 0; j < 4; j++)
        {
            cin>>arr[i][j];
        }
    }
    Spiral_print(arr,3,4);

    return 0;
}
